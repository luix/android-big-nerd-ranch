<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_drag_and_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microlands.android.draganddraw.DragAndDrawActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_drag_and_draw"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_drag_and_draw"
        app:layout_constraintRight_toRightOf="@+id/fragment_drag_and_draw"
        app:layout_constraintTop_toTopOf="@+id/fragment_drag_and_draw"/>

</android.support.constraint.ConstraintLayout>
